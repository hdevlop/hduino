{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hduino",
  "version": "0.1.0",
  "identifier": "com.hduino.desktop",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../web/out",
    "beforeDevCommand": "cd ../web && bun dev",
    "beforeBuildCommand": "cd ../web && bun run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splash",
        "title": "Hduino",
        "width": 288,
        "height": 256,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "center": true,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true
      },
      {
        "label": "main",
        "title": "Hduino",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "decorations": false,
        "fullscreen": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/arduino-cli"
    ],
    "resources": [
      "resources"
    ]
  }
}