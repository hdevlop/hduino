{
  "name": "hduino-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:clean": "turbo dev --force",
    "clean:cache": "rm -rf .turbo node_modules/.cache apps/*/.turbo apps/*/.next packages/*/.turbo",
    "dev:web": "turbo dev --filter=web",
    "dev:desktop": "turbo dev --filter=desktop",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:desktop": "turbo build --filter=desktop",
    "build:arduino": "turbo build --filter=@hduino/arduino",
    "type-check": "turbo type-check",
    "start": "turbo start",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.5"
  },
  "packageManager": "bun@1.1.42"
}